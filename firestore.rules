rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create contact submissions (for contact form)
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read: if false; // Only Cloud Functions can read
      allow update, delete: if false; // Only Cloud Functions can update/delete
    }
    
    // Allow anyone to create CV download requests
    match /cvDownloadRequests/{requestId} {
      allow create: if true;
      allow read: if false; // Only Cloud Functions can read
      allow update, delete: if false; // Only Cloud Functions can update/delete
    }
    
    // spamLogs collection - only Cloud Functions can write (for spam detection logging)
    // Note: Cloud Functions have admin access, so they can write regardless of these rules
    match /spamLogs/{logId} {
      allow read, write: if false; // Only Cloud Functions can access
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

